<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedAlertDialogStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialRoundedAlertDialogStyle"  parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/RoundedAlertDialogStyle</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:minWidth">230dp</item>
        <item name="android:radius">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/teleneooffice_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BrandButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_brand_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteButtonStyle" parent="ButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>